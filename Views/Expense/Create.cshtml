@model TaskManagementSystem.Models.Expense

<div class="container mt-4">
    <h2 class="mb-3 text-primary">Add Expense</h2>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="Date" class="form-label fw-bold"></label>
            <input asp-for="Date" class="form-control" type="date" />
            <!-- No validation span -->
        </div>


        <div class="mb-3">
            <label asp-for="Description" class="form-label fw-bold"></label>
            <input asp-for="Description" class="form-control" placeholder="Enter description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Amount" class="form-label fw-bold"></label>
            <input asp-for="Amount" class="form-control" type="number" step="0.01" placeholder="Enter amount" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Back
            </a>

            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Save
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
