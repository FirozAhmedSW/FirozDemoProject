@model IEnumerable<TaskManagementSystem.Models.Expense>

@{
    ViewData["Title"] = "Expense Report";
}

<div class="">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Expense Report</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus"></i> Add Expense
        </a>
    </div>

    <!-- 🔹 Filter Section -->
    <form method="get" asp-action="Index" class="row g-3 align-items-end mb-4">
        <!-- Month Filter -->
        <div class="col-md-2">
            <label class="form-label">Select Month</label>
            <input type="month" name="month" class="form-control" value="@ViewBag.SelectedMonth" />
        </div>

        <!-- From Date -->
        <div class="col-md-2">
            <label class="form-label">From Date</label>
            <input type="date" name="from" class="form-control" value="@ViewBag.FromDate" />
        </div>

        <!-- To Date -->
        <div class="col-md-2">
            <label class="form-label">To Date</label>
            <input type="date" name="to" class="form-control" value="@ViewBag.ToDate" />
        </div>

        <!-- Buttons -->
        <div class="col-md-6 d-flex gap-2">
            <!-- Filter Expense -->
            <button type="submit" name="action" value="filter" class="btn btn-success flex-grow-1">
                Filter Expense
            </button>

            <!-- Reset Expense -->
            <button type="submit" name="action" value="reset" class="btn btn-secondary flex-grow-1">
                Reset
            </button>

            <!-- Make Expense Report -->
            <button type="submit" name="action" value="report" class="btn btn-primary flex-grow-1">
                Make Expense Report
            </button>
        </div>
    </form>


    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th style="width:3.66%;">Date</th>
                <th style="width:33.33%;">Description</th>
                <th style="width:0.66%;" class="text-end">Amount</th>
                <th style="width:4.66%;">Added By</th>
                <th style="width:5.6%;">Action</th>
            </tr>

        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center text-danger">No records found</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@(item.Date.HasValue ? item.Date.Value.ToString("dd-MM-yyyy") : "-")</td>
                        <td>@item.Description</td>
                        <td class="text-end">@item.Amount.ToString("0.00")</td>
                        <td>@item.CreatedByUserName</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this record?');">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>



    <h4 class="text-end mt-3">
        <strong>Total:</strong> @ViewBag.TotalAmount?.ToString("0.00") ৳
    </h4>
</div>
