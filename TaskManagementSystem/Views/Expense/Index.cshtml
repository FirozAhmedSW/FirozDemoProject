@model IEnumerable<TaskManagementSystem.Models.Expense>

@{
    ViewData["Title"] = "Expense Report";
}

<div class="">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Expense Report</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus"></i> Add Expense
        </a>
    </div>

    <!-- 🔹 Filter Section -->
    <form method="get" asp-action="Index" class="row g-3 align-items-end mb-4">
        <div class="col-md-2">
            <label class="form-label">Select Month</label>
            <input type="month" name="month" class="form-control" value="@ViewBag.SelectedMonth" />
        </div>
        <div class="col-md-2">
            <label class="form-label">From Date</label>
            <input type="date" name="from" class="form-control" value="@ViewBag.FromDate" />
        </div>
        <div class="col-md-2">
            <label class="form-label">To Date</label>
            <input type="date" name="to" class="form-control" value="@ViewBag.ToDate" />
        </div>
        <div class="col-md-6 d-flex gap-2">
            <button type="submit" name="action" value="filter" class="btn btn-success flex-grow-1">
                Filter Expense
            </button>
            <button type="submit" name="action" value="reset" class="btn btn-secondary flex-grow-1"
                    onclick="window.location='@Url.Action("Index")'; return false;">
                Reset
            </button>
            <button type="submit"
                    class="btn btn-primary flex-grow-1"
                    onclick="window.location='@Url.Action("ExpenseReport", new { month = ViewBag.SelectedMonth, from = ViewBag.FromDate, to = ViewBag.ToDate })'; return false;">
                Make Expense Report
            </button>

        </div>
    </form>

    <!-- 🔹 Table -->
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Date</th>
                <th>Description</th>
                <th class="text-end">Amount</th>
                <th>Added By</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center text-danger">No records found</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@(item.Date.HasValue ? item.Date.Value.ToString("dd-MM-yyyy") : "-")</td>
                        <td>@item.Description</td>
                        <td class="text-end">@item.Amount.ToString("0.00")</td>
                        <td>@item.CreatedByUserName</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                  onsubmit="return confirm('Are you sure?');">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <!-- 🔹 Pagination with Total on Right -->
    <div class="d-flex justify-content-between align-items-center mt-3">
        <!-- Left: showing current record range -->
        <div>
            @if (Model.Any())
            {
                var startRecord = ((int)ViewBag.CurrentPage - 1) * (int)ViewBag.PageSize + 1;
                var endRecord = Math.Min(startRecord + (int)ViewBag.PageSize - 1, (int)ViewBag.TotalRecords);
                <span>Total Records: @ViewBag.TotalRecords, Showing @startRecord – @endRecord</span>
            }
        </div>

        <!-- Center: page numbers -->
        <nav>
            <ul class="pagination mb-0">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { month = ViewBag.SelectedMonth, from = ViewBag.FromDate, to = ViewBag.ToDate, page = 1 })">First</a>
                </li>
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { month = ViewBag.SelectedMonth, from = ViewBag.FromDate, to = ViewBag.ToDate, page = ViewBag.CurrentPage - 1 })">Prev</a>
                </li>

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    if (i >= ViewBag.CurrentPage - 2 && i <= ViewBag.CurrentPage + 2) // show only 5 pages
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { month = ViewBag.SelectedMonth, from = ViewBag.FromDate, to = ViewBag.ToDate, page = i })">@i</a>
                        </li>
                    }
                }

                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { month = ViewBag.SelectedMonth, from = ViewBag.FromDate, to = ViewBag.ToDate, page = ViewBag.CurrentPage + 1 })">Next</a>
                </li>
                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { month = ViewBag.SelectedMonth, from = ViewBag.FromDate, to = ViewBag.ToDate, page = ViewBag.TotalPages })">Last</a>
                </li>
            </ul>
        </nav>

        <!-- Right: Total Amount -->
        <div class="fw-bold">
            Total: @ViewBag.TotalAmount?.ToString("0.00") ৳
        </div>
    </div>

</div>
