@model TaskManagementSystem.Models.User
@{
    ViewData["Title"] = "Edit User";
}

<h3 class="mb-3 text-center text-primary">Edit User</h3>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label">User Name</label>
                <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter new password (leave blank to keep current)" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Address" class="form-label">Address</label>
                <input asp-for="Address" class="form-control" placeholder="Enter address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="Contact" class="form-label">Contact</label>
                <input asp-for="Contact" class="form-control" placeholder="Enter contact number" />
                <span asp-validation-for="Contact" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="About" class="form-label">About</label>
                <textarea asp-for="About" class="form-control" rows="3" placeholder="Write something about user..."></textarea>
                <span asp-validation-for="About" class="text-danger"></span>
            </div>

            <!-- ✅ Role Dropdown -->
            <div class="form-group mb-3">
                <label asp-for="RoleId" class="form-label">Select Role</label>
                <select asp-for="RoleId" asp-items="ViewBag.Roles" class="form-select">
                    <option value="">-- Select Role --</option>
                </select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>

            <!-- ✅ Photo Upload Field -->
            <div class="form-group mb-3">
                <label class="form-label">Upload Photo</label>
                <input type="file" name="Photo" class="form-control" accept="image/*" />
                <small class="text-muted">Supported formats: JPG, PNG, JPEG</small>
            </div>

            <!-- ✅ Existing Photo Preview -->
            <div id="photo-preview" class="mb-3 text-center">
                @if (!string.IsNullOrEmpty(Model.PhotoPath))
                {
                    <img src="@Model.PhotoPath" alt="Current Photo" class="rounded" style="max-width:150px;" />
                }
                else
                {
                    <img src="~/images/default-user.png" alt="No Photo" class="rounded" style="max-width:150px;" />
                }
            </div>
        </div>
    </div>

    <div class="mt-3 text-center">
        <button type="submit" class="btn btn-success px-4">Update</button>
        <a asp-action="Index" class="btn btn-secondary ms-2 px-4">Back</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Preview newly selected photo
        document.querySelector('input[name="Photo"]').addEventListener('change', function (e) {
            const previewImg = document.getElementById('photo-preview').querySelector('img');
            const file = e.target.files[0];
            if (file) {
                previewImg.src = URL.createObjectURL(file);
            }
        });
    </script>
}
