@model TaskManagementSystem.Models.Permission.Role

@{
    ViewData["Title"] = "Edit Role";
}

<h2>Edit Role</h2>

<form asp-action="Edit" method="post">
    <!-- Hidden field for Id -->
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        @* Properly handle checkbox checked state *@
        @if (Model.IsActive)
        {
            <input type="checkbox" asp-for="IsActive" class="form-check-input" checked />
        }
        else
        {
            <input type="checkbox" asp-for="IsActive" class="form-check-input" />
        }
        <label asp-for="IsActive" class="form-check-label">Is Active</label>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
