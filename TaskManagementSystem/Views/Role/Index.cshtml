@model IEnumerable<TaskManagementSystem.Models.Permission.Role>

@{
    ViewData["Title"] = "Roles";
}

<h2>Roles</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Role</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Is Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>@role.Description</td>
                <td>@(role.IsActive ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
