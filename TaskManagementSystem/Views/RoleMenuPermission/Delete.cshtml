@model TaskManagementSystem.Models.Permission.RoleMenuPermission

@{
    ViewData["Title"] = "Delete Role Permission";
}

<h2>Delete Role Permission</h2>

<h4>Are you sure you want to delete this permission?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Role</dt>
        <dd class="col-sm-10">@Model.Role?.Name</dd>

        <dt class="col-sm-2">Menu</dt>
        <dd class="col-sm-10">@Model.Menu?.Title</dd>

        <dt class="col-sm-2">Permissions</dt>
        <dd class="col-sm-10">
            View: @(Model.CanView ? "Yes" : "No"),
            Create: @(Model.CanCreate ? "Yes" : "No"),
            Edit: @(Model.CanEdit ? "Yes" : "No"),
            Delete: @(Model.CanDelete ? "Yes" : "No")
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
