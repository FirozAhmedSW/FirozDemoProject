@model TaskManagementSystem.Models.Permission.RoleMenuPermission

@{
    ViewData["Title"] = "Delete Role Permission";
}

<h2 class="mb-3">Delete Role Permission</h2>

<div class="alert alert-warning">
    <strong>Warning:</strong> Are you sure you want to delete this permission?
</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Role</dt>
            <dd class="col-sm-9">@Model.Role?.Name ?? "-"</dd>

            <dt class="col-sm-3">Menu</dt>
            <dd class="col-sm-9">@Model.Menu?.Title ?? "-"</dd>

            <dt class="col-sm-3">Permissions</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.CanView ? "bg-success" : "bg-danger")">View: @(Model.CanView ? "Yes" : "No")</span>
                <span class="badge @(Model.CanCreate ? "bg-success" : "bg-danger")">Create: @(Model.CanCreate ? "Yes" : "No")</span>
                <span class="badge @(Model.CanEdit ? "bg-success" : "bg-danger")">Edit: @(Model.CanEdit ? "Yes" : "No")</span>
                <span class="badge @(Model.CanDelete ? "bg-success" : "bg-danger")">Delete: @(Model.CanDelete ? "Yes" : "No")</span>
            </dd>
        </dl>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger me-2">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
