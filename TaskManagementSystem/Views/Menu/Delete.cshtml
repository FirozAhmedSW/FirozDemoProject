@model TaskManagementSystem.Models.Permission.Menu

@{
    ViewData["Title"] = "Delete Menu";
}

<h2>Delete Menu</h2>

<h4>Are you sure you want to delete this menu?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Parent Menu</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Controller</dt>
        <dd class="col-sm-10">@Model.ControllerName</dd>

        <dt class="col-sm-2">Action</dt>
        <dd class="col-sm-10">@Model.ActionName</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
