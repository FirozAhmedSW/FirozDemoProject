@model TaskManagementSystem.Models.Permission.Menu

@{
    ViewData["Title"] = "Edit Menu";
}

<h2>Edit Menu</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-2">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="ControllerName"></label>
        <input asp-for="ControllerName" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="ActionName"></label>
        <input asp-for="ActionName" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label>Parent Menu</label>
        <select asp-for="ParentId" class="form-control" asp-items="@(new SelectList(ViewBag.Parents, "Id", "Title"))">
            <option value="">-- None --</option>
        </select>
    </div>

    <div class="form-check mb-3">
        <input type="checkbox" class="isActiveCheckbox" data-id="@Model.Id"
        @if (Model.IsActive)
        {
            @:checked
        } />
        <label class="form-check-label">Is Active</label>
    </div>


    <button type="submit" class="btn btn-success mt-2">Save</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Back</a>
</form>
