@{
    ViewData["Title"] = "Dashboard";
    var logs = ViewBag.RecentLogs as List<TaskManagementSystem.Models.ActivityLog>;
}

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <p class="card-text fs-3">150</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Active Sessions</h5>
                    <p class="card-text fs-3">23</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Reports Today</h5>
                    <p class="card-text fs-3">5</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <h5 class="card-title">Pending Tasks</h5>
                    <p class="card-text fs-3">8</p>
                </div>
            </div>
        </div>
    </div>

    <h4 class="mt-4">Recent Activity</h4>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Time</th>
                <th>User</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (logs != null && logs.Any())
            {
                foreach (var log in logs)
                {
                    <tr>
                        <td>@log.CreatedAt.ToString("dd-MMM-yyyy hh:mm tt")</td>
                        <td>@log.UserName</td>
                        <td>@log.ActionType</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">No recent activity found</td>
                </tr>
            }
        </tbody>
    </table>
</div>
