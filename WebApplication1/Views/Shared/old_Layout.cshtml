<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .sidebar {
            min-width: 200px;
            max-width: 220px;
            background-color: #343a40;
            color: #fff;
            min-height: 100vh;
        }

            .sidebar .nav-link {
                color: #fff;
            }

                .sidebar .nav-link.active {
                    background-color: #495057;
                }

        .content-wrapper {
            flex: 1;
            padding: 20px;
        }

        footer {
            background-color: #f8f9fa;
            padding: 10px 0;
            text-align: center;
        }

        .topbar {
            background-color: #fff;
            border-bottom: 1px solid #dee2e6;
            padding: 10px 20px;
        }
    </style>
</head>
<body>
    @{
        var user = Context.Session.GetString("UserName");
    }
    @if (!string.IsNullOrEmpty(user))
    {
        <div class="d-flex">
            <!-- Sidebar -->
            <nav class="sidebar d-flex flex-column p-3">
                <h4 class="text-center mb-4">Menu</h4>
                <ul class="nav nav-pills flex-column mb-auto">
                    <li class="nav-item">
                        <a asp-controller="Account" asp-action="Dashboard" class="nav-link">Dashboard</a>
                    </li>
                    <li>
                        <a asp-controller="Dashboard" asp-action="Reports" class="nav-link">Reports</a>
                    </li>

                    <li>
                        <a href="#" class="nav-link">Settings</a>
                    </li>
                    <li>
                        <a href="#" class="nav-link">Profile</a>
                    </li>
                </ul>
            </nav>

            <!-- Main content -->
            <div class="flex-grow-1">
                <!-- Topbar -->
                <div class="topbar d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Dashboard</h5>
                    <div>
                        <span class="me-3">Welcome, @user</span>
                        <a class="btn btn-danger btn-sm" asp-controller="Account" asp-action="Logout">Logout</a>
                    </div>
                </div>

                <!-- Content -->
                <div class="content-wrapper">
                    @RenderBody()
                </div>
            </div>


        </div>

        <!-- Footer -->
        <footer>
            &copy; 2025 - TaskManagementSystem
        </footer>
    }
    else
    {
        @RenderBody()
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
