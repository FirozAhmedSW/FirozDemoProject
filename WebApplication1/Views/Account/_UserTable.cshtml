@model IEnumerable<WebApplication1.Models.User>

<table class="table table-striped table-bordered align-middle text-center">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Photo</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Contact</th>
            <th>About</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="8" class="text-center text-danger">No users found!</td>
            </tr>
        }
        else
        {
            int index = 1;
            foreach (var user in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>
                        @if (!string.IsNullOrEmpty(user.PhotoPath))
                        {
                            <img src="@user.PhotoPath" alt="Photo" class="rounded-circle" style="width:50px; height:50px;" />
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.Address</td>
                    <td>@user.Contact</td>
                    <td>@user.About</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                    </td>
                </tr>
                index++;
            }
        }
    </tbody>
</table>

<!-- Pagination -->
@if (ViewBag.TotalPages != null && ViewBag.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="javascript:void(0);" data-page="@(ViewBag.CurrentPage - 1)">Previous</a>
            </li>

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="javascript:void(0);" data-page="@i">@i</a>
                </li>
            }

            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="javascript:void(0);" data-page="@(ViewBag.CurrentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
}
