@model TaskManagementSystem.Models.DailyNote

@{
    ViewData["Title"] = "Create Daily Note";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group mb-3">
        <label asp-for="Note" class="form-label">Note</label>
        <textarea asp-for="Note" class="form-control" rows="5" placeholder="Write your note here..."></textarea>
        <!-- Validation removed -->
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">
            <i class="bi bi-save"></i> Save
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>
</form>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Validation scripts removed to allow empty note -->
